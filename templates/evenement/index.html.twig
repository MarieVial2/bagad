{% extends 'baseAdmin.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
<div class="container">
    <h4>Evenement index</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEvenement</th>
                <th>DateEvenement</th>
                <th>HeureDebutEvenement</th>
                <th>HeureFinEvenement</th>
                <th>LieuEvenement</th>
                <th>PhotoEvenement</th>
                <th>DescriptionEvenement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.nomEvenement }}</td>
                <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.heureDebutEvenement }}</td>
                <td>{{ evenement.heureFinEvenement }}</td>
                <td>{{ evenement.lieuEvenement }}</td>
                <td>{{ evenement.photoEvenement }}</td>
                <td>{{ evenement.descriptionEvenement }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
</div>
{% endblock %}
