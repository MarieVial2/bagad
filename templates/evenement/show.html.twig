{% extends 'baseAdmin.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<div class="container">
    <h4>{{ evenement.nomEvenement }}</h4>

    <table class="table table-evenement">
        <tbody>
            <tr>
                <th>Créateur de l'évènement</th>
                <td>{{ evenement.idUser.prenomUser }} {{ evenement.idUser.nomUser }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nomEvenement }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de début</th>
                <td>{{ evenement.heureDebutEvenement }}</td>
            </tr>
            <tr>
                <th>Heure de fin</th>
                <td>{{ evenement.heureFinEvenement }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ evenement.lieuEvenement }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.descriptionEvenement }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <div class="image-evenement" style="background-image: url({{ asset('uploads/images/' ~ evenement.photoEvenement) }}); background-position: center;
                        background-size: cover;">
                    </div>
                </td>
            </tr>


        </tbody>
    </table>

    <div class="form-button">
        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">
            <button type="button" class="btn btn-success">Editer</button>
        </a>
    </div>
</div>
{% endblock %}