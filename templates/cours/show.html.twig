{% extends 'baseAdmin.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
<div class="container">
    <h4>Cours de {{ cour.instrumentCours }}</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Instrument</th>
                <td>{{ cour.instrumentCours }}</td>
            </tr>
            <tr>
                <th>Public du cours</th>
                <td>{{ cour.publicCours }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ cour.jourCours }}</td>
            </tr>
            <tr>
                <th>Heure de d√©but</th>
                <td>{{ cour.heureDebutCours }}</td>
            </tr>
            <tr>
                <th>Heure de fin</th>
                <td>{{ cour.heureFinCours }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ cour.lieuCours }}</td>
            </tr>

            <tr>
                <th>Ville</th>
                <td>{{ cour.villeCours }}</td>
            </tr>
        </tbody>
    </table>


    <div class="form-button">
        <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">
            <button type="button" class="btn btn-success">Editer</button>
        </a>
    </div>

</div>
{% endblock %}