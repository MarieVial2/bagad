{% extends 'baseAdmin.html.twig' %}

{% block title %}Cours index{% endblock %}

{% block body %}
<div class="container">
    <h4>Cours </h4>

    <div class="nouveau">
        <a href="{{ path('app_cours_new') }}">
            <button type="button" class="btn btn-primary">Nouveau</button>
        </a>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>

                <th>Instrument</th>
                <th>Public</th>
                <th>Jour</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for cour in cours %}
            <tr>

                <td>{{ cour.instrumentCours }}</td>
                <td>{{ cour.publicCours }}</td>
                <td>{{ cour.jourCours }}</td>

                <td class="groupe-boutons">

                    <a href="{{ path('app_cours_show', {'id': cour.id}) }}">
                        <button type="button" class="btn btn-warning">Voir</button>
                    </a>
                    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">
                        <button type="button" class="btn btn-success">Editer</button>
                    </a>
                    {{ include('cours/_delete_form.html.twig') }}

                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="9">Aucun cours trouv√©</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}