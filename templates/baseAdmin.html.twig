<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bagad d'Orvault{% endblock %}</title>
        <link rel="icon" href="{{ asset('photos/drapeau.png') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        <script src="https://kit.fontawesome.com/dcef3565c8.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Assistant:wght@400;700&family=Crimson+Text&family=Jost&family=Alegreya&family=Dosis:wght@400;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/lux/bootstrap.min.css" integrity="sha384-9+PGKSqjRdkeAU7Eu4nkJU8RFaH8ace8HGXnkiKMP9I9Te0GJ4/km3L1Z8tXigpG" crossorigin="anonymous">
            
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
        <link rel="stylesheet" media="screen and (max-width: 720px)" href="{{ asset('styles/style-720.css') }}">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
            <script defer src="{{ asset('scripts/script.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <div id="bandeau-admin">
            <div>
                Bonjour, 
            </div>
            <div>
                <a href="{{ path('app_logout')}}">Se déconnecter <i class="fa-solid fa-share-from-square"></i></a>
            </div>
        </div>
        <div id="conteneur-admin">
            <div class="row" id="corps-admin">
                <div class="col-md-3" >
                    <div id="menu-admin">
                        <div class="menu-item">
                            <div><a href=" {{ path('app_user_index')}}">Adhérents</a></div>
                            <div><i class="fa-solid fa-user"></i></div>
                        </div>
                        <div class="menu-item">
                            <div><a href=" {{ path('app_prof_index')}}">Profs</a></div>
                            <div><i class="fa-solid fa-circle-user"></i></div>
                        </div>
                        <div class="menu-item">
                            <div><a href=" {{ path('app_cours_index')}}">Cours</a></div>
                            <div><i class="fa-solid fa-book"></i></div>
                        </div>
                        <div class="menu-item">
                            <div><a href=" {{ path('app_evenement_index')}}">Evenements</a></div>
                            <div><i class="fa-solid fa-calendar-days"></i></div>
                        </div>
                        <div class="menu-item">
                            <div><a href=" {{ path('app_demande_prestation_index')}}">Demande de prestation</a></div>
                            <div><i class="fa-solid fa-calendar-check"></i></div>
                        </div>
                        <div class="menu-item">
                            <div><a href=" {{ path('app_contact_index')}}">Autres demandes</a></div>
                            <div><i class="fa-solid fa-message"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 p-0">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>
